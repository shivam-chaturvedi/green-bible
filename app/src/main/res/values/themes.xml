<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GreenBible" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Garden & Nature Color Scheme -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/leaf_green</item>
        <item name="colorSecondaryVariant">@color/green_emerald</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/surface_nature</item>
        <item name="colorOnSurface">@color/text_nature_dark</item>
        <item name="android:statusBarColor">@color/green_primary</item>
        <item name="android:navigationBarColor">@color/green_light</item>
    </style>

    <style name="Theme.GreenBible" parent="Base.Theme.GreenBible" />

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/green_light</item>
        <item name="android:navigationBarColor">@color/green_light</item>
    </style>
</resources>