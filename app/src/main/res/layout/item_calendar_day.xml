<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dayCard"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:clickable="false"
    android:focusable="false"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    app:rippleColor="@color/calendar_day_ripple"
    app:strokeColor="@color/calendar_day_stroke"
    app:strokeWidth="@dimen/calendar_day_stroke_width">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/dayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/dot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/dot_orange"
            android:visibility="gone" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
