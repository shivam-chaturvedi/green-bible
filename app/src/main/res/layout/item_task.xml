<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:clickable="false"
    android:focusable="false"
    app:cardBackgroundColor="@color/surface_nature"
    app:cardCornerRadius="18dp"
    app:cardElevation="3dp"
    app:strokeColor="@color/green_mint"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground">

        <View
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/dot_green"
            android:importantForAccessibility="no" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monitor plant growth"
                android:textColor="@color/green_emerald"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/taskMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Nov 20, 2025 â€¢ 10:30 AM"
                android:textColor="@color/text_gray"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnEdit"
            style="?attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/task_action_edit"
            android:padding="6dp"
            android:src="@drawable/ic_edit"
            android:tint="@color/green_primary" />

        <ImageButton
            android:id="@+id/btnDelete"
            style="?attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/task_action_delete"
            android:padding="6dp"
            android:src="@drawable/ic_delete"
            android:tint="#CC6E6E" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
