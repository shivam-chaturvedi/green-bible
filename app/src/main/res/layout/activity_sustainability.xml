<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sustainability Strategies"
                android:textColor="@color/green_primary"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_marginBottom="16dp" />

            <!-- 🌦 Weather Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:elevation="2dp"
                android:padding="16dp">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/weatherIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_weather"
                        android:tint="@color/green_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weather-Based Recommendations"
                        android:textStyle="bold"
                        android:textColor="@color/green_primary"
                        android:textSize="18sp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/weatherLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="12sp"
                        android:textColor="#E68A00"
                        android:background="#FFF0DB"
                        android:padding="6dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp"
                        android:backgroundTintMode="multiply"
                        android:layout_gravity="end"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Weather Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <ProgressBar
                        android:id="@+id/weatherLoading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Temperature:"
                            android:textColor="@color/text_dark"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/weatherTemperature"
                            android:text="--"
                            android:textColor="@color/green_primary"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:text="Humidity:"
                            android:textColor="@color/text_dark"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/weatherHumidity"
                            android:text="--"
                            android:textColor="@color/green_primary"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:text="Precipitation:"
                            android:textColor="@color/text_dark"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/weatherPrecip"
                            android:text="--"
                            android:textColor="@color/green_primary"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/weatherSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fetching sustainability tips based on your weather..."
                        android:textStyle="italic"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="6dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="#E0E0E0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Irrigation Status:"
                            android:textColor="@color/text_dark"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/irrigationStatus"
                            android:text="--"
                            android:textColor="@color/green_primary"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp" />
                        <Switch
                            android:id="@+id/irrigationSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:enabled="false" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 🔔 Smart Notifications Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Smart Notifications"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary"
                    android:textSize="18sp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <!-- ♻️ Filter Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include layout="@layout/item_chip_all" android:id="@+id/chip_all"/>
                    <include layout="@layout/item_chip_composting" android:id="@+id/chip_composting"/>
                    <include layout="@layout/item_chip_organic" android:id="@+id/chip_organic"/>
                    <include layout="@layout/item_chip_water" android:id="@+id/chip_water"/>
                    <include layout="@layout/item_chip_tips" android:id="@+id/chip_tips"/>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- 📘 Educational Guides -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Educational Guides"
                android:textColor="@color/green_primary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <include layout="@layout/item_guide_card" android:id="@+id/item_guide_card_1"/>
            <include layout="@layout/item_guide_card_2" android:id="@+id/item_guide_card_2"/>
            <include layout="@layout/item_guide_card_3" android:id="@+id/item_guide_card_3"/>
            <include layout="@layout/item_guide_card_4" android:id="@+id/item_guide_card_4"/>
            <include layout="@layout/item_guide_card_5" android:id="@+id/item_guide_card_5"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Nav -->
    <include layout="@layout/bottom_nav" />
</LinearLayout>
