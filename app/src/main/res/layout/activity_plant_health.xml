<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light">

    <!-- Scrollable main content -->
    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plant Health Diagnosis"
                android:textColor="@color/green_primary"
                android:textStyle="bold"
                android:textSize="26sp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp" />

            <!-- Upload Image Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Plant Image"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Take a photo or select an image of the affected plant for AI analysis"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp">

                    <!-- Camera Button -->
                    <LinearLayout
                        android:id="@+id/btnCamera"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_button_outline">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_camera"
                            android:tint="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Take Photo"
                            android:textColor="@color/green_primary"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="match_parent" />

                    <!-- Gallery Button -->
                    <LinearLayout
                        android:id="@+id/btnGallery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/bg_button_outline">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_image"
                            android:tint="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Choose Image"
                            android:textColor="@color/green_primary"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Image Preview -->
                <ImageView
                    android:id="@+id/previewImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="centerCrop"
                    android:background="#E0E0E0"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Describe Symptoms Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Describe Symptoms"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provide additional details about what you're observing"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="6dp" />

                <EditText
                    android:id="@+id/symptomInput"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="e.g., yellow spots, white patches..."
                    android:background="@drawable/bg_button_outline"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/text_dark"
                    android:gravity="top|start" />
            </LinearLayout>

            <!-- Analyze Button -->
            <LinearLayout
                android:id="@+id/btnAnalyze"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button_green"
                android:gravity="center"
                android:orientation="horizontal"
                android:elevation="3dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Analyze Plant Health"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_nav" />
</LinearLayout>
