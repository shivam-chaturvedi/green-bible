<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/green_light">

    <ScrollView android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1" android:padding="16dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plant Health Diagnosis"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/green_primary"
                android:layout_marginBottom="12dp"/>

            <!-- Upload card -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/bg_card" android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Plant Image"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Take a photo or select an image of the affected plant for AI analysis"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="6dp"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginTop="12dp">
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:background="@drawable/bg_button_outline"
                        android:gravity="center" android:padding="12dp">
                        <ImageView android:layout_width="20dp" android:layout_height="20dp"
                            android:src="@drawable/ic_camera" app:tint="@color/green_primary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Take Photo"
                            android:textColor="@color/green_primary"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <Space android:layout_width="12dp" android:layout_height="1dp"/>

                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:background="@drawable/bg_button_outline"
                        android:gravity="center" android:padding="12dp">
                        <ImageView android:layout_width="20dp" android:layout_height="20dp"
                            android:src="@drawable/ic_image" app:tint="@color/green_primary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose Image"
                            android:textColor="@color/green_primary"
                            android:layout_marginStart="8dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Symptoms card -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/bg_card" android:orientation="vertical"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Describe Symptoms"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Provide additional details about what you're observing"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="6dp"/>
                <EditText android:layout_width="match_parent" android:layout_height="120dp"
                    android:background="@android:color/transparent"
                    android:hint="" android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:backgroundTint="@color/green_primary"/>
            </LinearLayout>

            <!-- Analyze button -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="56dp"
                android:layout_marginTop="16dp" android:background="@drawable/bg_button_green"
                android:gravity="center">
                <ImageView android:layout_width="20dp" android:layout_height="20dp"
                    android:src="@drawable/ic_search" app:tint="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analyze Plant Health"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bottom_nav"/>
</LinearLayout>
